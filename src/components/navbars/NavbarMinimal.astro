---
/**
 * Minimal Navbar - Clean, simple navigation
 * Logo left, minimal links, single CTA
 */
import { getDesignDNA } from '../../lib/site-config';
import TextLogo from '../TextLogo.astro';

const designDNA = getDesignDNA();
---

<nav class="bg-white/95 backdrop-blur-sm sticky top-0 z-40 border-b border-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <!-- Logo -->
      <TextLogo size="sm" variant="solid" />

      <!-- Minimal Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/eligibility" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Eligibility</a>
        <a href="/providers" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Providers</a>
        <a href="/faq" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">FAQ</a>
        <a href="/apply" class="no-underline text-sm font-medium py-2 px-4 rounded-md transition-all duration-200" style={`background: ${designDNA.colors.primary}; color: white;`}>
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden p-2 rounded-lg hover:bg-gray-100" aria-label="Menu">
        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</nav>

