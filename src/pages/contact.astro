---
import Layout from '../layouts/Layout.astro';
import { getSiteURL, getSiteName, getDomain, getKeywordId } from '../lib/site-config';
import { loadKeywordVariations } from '../lib/variations';

export const prerender = true;

const SITE_URL = getSiteURL();
const SITE_NAME = getSiteName();
const DOMAIN = getDomain();
const keywordId = getKeywordId();

// Load keyword-specific variations
const keywordModule = await loadKeywordVariations(keywordId);
const { getH1Variation, getMetaVariations } = keywordModule;

// Dynamic SEO Meta Tags using keyword variations
const metaContent = getMetaVariations(SITE_NAME, DOMAIN, 'contact');
const title = metaContent.title;
const description = metaContent.description;

// Dynamic H1 using keyword variations
const h1Text = getH1Variation(DOMAIN, 'contact');

// Structured data for better SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Contact Us - Government Phone Service Support & Help 2025",
  "description": "Contact information and support for free government phone service, Lifeline, and ACP programs.",
  "image": `${SITE_URL}/og-image.jpg`,
  "author": {
    "@type": "Organization",
    "name": DOMAIN
  },
  "publisher": {
    "@type": "Organization",
    "name": DOMAIN,
    "logo": {
      "@type": "ImageObject",
      "url": `${SITE_URL}/logo.png`
    }
  },
  "datePublished": "2025-01-01",
  "dateModified": "2025-01-01",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${SITE_URL}/contact`
  }
};

const contactData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": `${DOMAIN} Contact`,
  "description": `Contact ${DOMAIN} for support with federal communication assistance programs`,
  "url": `${SITE_URL}/contact`,
  "mainEntity": {
    "@type": "Organization",
    "name": DOMAIN,
    "contactPoint": {
      "@type": "ContactPoint",
      "contactType": "customer service",
      "availableLanguage": "English",
      "areaServed": "US"
    }
  }
};
---

<Layout title={title} description={description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <script type="application/ld+json" set:html={JSON.stringify(contactData)} />

  <!-- Breadcrumb Navigation -->
  <nav class="bg-gray-50 py-3">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-blue-600">Home</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Contact</li>
      </ol>
    </div>
  </nav>

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        {h1Text}
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Need assistance with federal communication assistance programs, Lifeline, or ACP? Our expert support team is available to answer your questions and guide you through the application process.
      </p>
      
      <!-- Social Proof -->
      <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-2xl p-6 mb-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">24/7</div>
            <div class="text-sm text-gray-600">Support Available</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-green-600 mb-2">98%</div>
            <div class="text-sm text-gray-600">Satisfaction Rate</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-yellow-600 mb-2">&lt; 2 min</div>
            <div class="text-sm text-gray-600">Response Time</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-purple-600 mb-2">2.8M+</div>
            <div class="text-sm text-gray-600">People Helped</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Options -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        How Can We Help You?
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Contact Form -->
        <div class="md:col-span-2">
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h3>
            <form class="space-y-6" onsubmit="return false;">
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                    required 
                    placeholder="Enter your full name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                    required 
                    placeholder="Enter your email address"
                  />
                </div>
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                  placeholder="Enter your phone number"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject *</label>
                <select 
                  id="subject" 
                  name="subject" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                  required
                >
                  <option value="">Select a subject</option>
                  <option value="eligibility">Eligibility Questions</option>
                  <option value="application">Application Help</option>
                  <option value="providers">Provider Information</option>
                  <option value="technical">Technical Support</option>
                  <option value="billing">Billing Questions</option>
                  <option value="general">General Inquiry</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" 
                  required 
                  placeholder="Tell us how we can help you..."
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold py-4 px-8 rounded-xl text-lg shadow-lg transform hover:scale-105 transition-all duration-200"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
        
        <!-- Contact Information -->
        <div class="space-y-6">
          <!-- Response Time Info -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Fast Response</h3>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Average Response</p>
                  <p class="font-semibold text-gray-900">Under 2 minutes</p>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Satisfaction Rate</p>
                  <p class="font-semibold text-gray-900">98% Happy Customers</p>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-600">People Helped</p>
                  <p class="font-semibold text-gray-900">2.8M+ Americans</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Support Hours -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Support Hours</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Online Support:</span>
                <span class="font-semibold text-green-600">24/7 Available</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Form Responses:</span>
                <span class="font-semibold text-gray-900">Within 24 hours</span>
              </div>
            </div>
            <div class="mt-4 p-3 bg-blue-50 rounded-lg">
              <p class="text-sm text-blue-800">
                <strong>Tip:</strong> Check our FAQ for instant answers to common questions
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Support Categories -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Support & Resources
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/faq" class="block p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-200 text-center">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">FAQ</h3>
          <p class="text-gray-600 text-sm">Quick answers to common questions</p>
        </a>
        
        <a href="/apply" rel="noreferrer" class="block p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-200 text-center">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Eligibility</h3>
          <p class="text-gray-600 text-sm">Check if you qualify for free service</p>
        </a>
        
        <a href="/programs" class="block p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-200 text-center">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Programs</h3>
          <p class="text-gray-600 text-sm">Learn about Lifeline & ACP</p>
        </a>
        
        <a href="/providers" class="block p-6 bg-white rounded-xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-200 text-center">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Providers</h3>
          <p class="text-gray-600 text-sm">Compare phone service providers</p>
        </a>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Why Choose {SITE_NAME}?
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <h3 class="text-xl font-bold text-gray-900 mb-3">Expert Guidance</h3>
          <p class="text-gray-600">
            Our team has helped millions of Americans get free phone service. We know the process inside and out.
          </p>
        </div>
        
        <div class="text-center">
          <h3 class="text-xl font-bold text-gray-900 mb-3">24/7 Support</h3>
          <p class="text-gray-600">
            Need help anytime? Our support team is available around the clock to assist you.
          </p>
        </div>
        
        <div class="text-center">
          <h3 class="text-xl font-bold text-gray-900 mb-3">100% Secure</h3>
          <p class="text-gray-600">
            Your information is protected with bank-level encryption. We never share your data.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl p-8 text-white">
      <h2 class="text-3xl font-bold mb-4">We're Here to Help</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Don't hesitate to reach out with any questions or concerns. Our mission is to help every eligible American get the free phone service they deserve.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/apply" rel="noreferrer" class="bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-500 hover:to-yellow-600 text-gray-900 font-bold py-4 px-8 rounded-xl text-lg shadow-lg transform hover:scale-105 transition-all duration-200">
          CHECK ELIGIBILITY NOW
        </a>
        <a href="/faq" class="bg-white/20 hover:bg-white/30 text-white font-bold py-4 px-8 rounded-xl text-lg border border-white/30 transition-all duration-200">
          VIEW FAQ
        </a>
      </div>
      <p class="text-sm text-blue-200 mt-6">
        âš¡ Takes 2 minutes â€¢ ðŸ”’ 100% Secure â€¢ ðŸ’° No hidden fees
      </p>
    </section>

    <!-- Related Links -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">More Resources</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/apply" rel="noreferrer" class="block p-6 bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Check Eligibility</h3>
          <p class="text-gray-600 text-sm">See if you qualify for free phone service through government programs.</p>
        </a>
        <a href="/programs" class="block p-6 bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Government Programs</h3>
          <p class="text-gray-600 text-sm">Learn about Lifeline and ACP programs and their benefits.</p>
        </a>
        <a href="/faq" class="block p-6 bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">FAQ</h3>
          <p class="text-gray-600 text-sm">Get answers to common questions about eligibility, application process, and more.</p>
        </a>
      </div>
    </section>
  </main>
</Layout>


